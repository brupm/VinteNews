%h1 Login
= form_for @user_session, :url => user_session_path do |f|

  - if @user_session.errors.any?
    %ul
      - @user_session.errors.full_messages.each do |msg|
        %li= msg

  %div
    = f.label :login, t("activerecord.attributes.user.login")
    %br
    = f.text_field :login
  %div
    = f.label :password, t("activerecord.attributes.user.password")
    %br
    = f.password_field :password
    %br
    = f.check_box :remember_me
    = f.label :remember_me, t("activerecord.attributes.user_session.remember_me")
    %br

  %div
    = f.submit "Login", :disable_with => t("common.button_disable_with")
