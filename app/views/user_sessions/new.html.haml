%h1 Login
= form_for @user_session do |f|

  - if @user_session.errors.any?
    %ul
      - @user_session.errors.full_messages.each do |msg|
        %li= msg

  %div
    = f.label :login
    %br
    = f.text_field :login
  %div
    = f.label :password
    %br
    = f.password_field :password
  %div
    = f.submit "Login", :disable_with => "Please wait..."

